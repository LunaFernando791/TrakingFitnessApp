<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trackingv2.CameraScreenV2">

    <!-- Vista previa de la cámara -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scaleType="fillStart" />

    <!-- Overlay de landmarks -->
    <com.example.trackingfitness.trackingv2.OverlayView
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Nombre del ejercicio (arriba centrado) -->
    <TextView
        android:id="@+id/exerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undefined"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:padding="8dp"
        android:background="@drawable/rounded_button_imagebuttom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- PoseClass (estado) abajo del nombre -->
    <TextView
        android:id="@+id/poseClassText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State: undefined"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="@drawable/rounded_button_imagebuttom"
        app:layout_constraintTop_toBottomOf="@id/exerciseName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Reps (abajo izquierda) -->
    <TextView
        android:id="@+id/repetitionCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button_setsreps"
        android:padding="8dp"
        android:text="Reps:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/setCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Sets (abajo izquierda) -->
    <TextView
        android:id="@+id/setCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button_setsreps"
        android:padding="8dp"
        android:text="Set: 1/3"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descanso: 15 s"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/rounded_button_descs"
        android:padding="8dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/repetitionCount"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FAB (abajo derecha) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_more"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Cronómetro (si lo necesitas) -->
    <TextView
        android:id="@+id/generalTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button_setsreps"
        android:padding="8dp"
        android:text="00:00"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/repetitionCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Texto de estado (opcional) -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esperando acción..."
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/rounded_button_descs"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/poseClassText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- 🔥 Overlay reutilizable para estados importantes (x_pose, descanso, etc.) -->
    <FrameLayout
        android:id="@+id/stateOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stateOverlayLayout"
            android:orientation="vertical"
            android:background="@drawable/rounded_overlay_setcompleted"
            android:padding="24dp"
            android:gravity="center"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/aliasInput"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Alias"

                android:padding="12dp"
                android:textColor="#000000"
                android:inputType="textPersonName"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/phoneInput"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Teléfono"

                android:padding="12dp"
                android:textColor="#000000"
                android:inputType="phone"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>

            <!-- Texto: Set completado -->
            <TextView
                android:id="@+id/stateOverlayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#404040"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:textAlignment="center"/>

            <!-- Cronómetro en tiempo real -->
            <TextView
                android:id="@+id/overlayTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#404040"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Botón: Saltar cronómetro -->
            <Button
                android:id="@+id/skipTimerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button_setsreps"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textAllCaps="false"
                android:elevation="4dp" />
        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
